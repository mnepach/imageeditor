<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Основная панель инструментов -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnUndo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/undo"
                android:src="@android:drawable/ic_menu_revert" />

            <ImageButton
                android:id="@+id/btnRedo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/redo"
                android:src="@android:drawable/ic_menu_revert" />

            <ImageButton
                android:id="@+id/btnCrop"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/crop"
                android:src="@android:drawable/ic_menu_crop" />

            <ImageButton
                android:id="@+id/btnRotate"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/rotate"
                android:src="@android:drawable/ic_menu_rotate" />

            <ImageButton
                android:id="@+id/btnFlip"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/flip"
                android:src="@android:drawable/ic_menu_always_landscape_portrait" />

            <ImageButton
                android:id="@+id/btnDraw"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/draw"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/btnShape"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/shape"
                android:src="@android:drawable/ic_menu_view" />

            <ImageButton
                android:id="@+id/btnText"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/text"
                android:src="@android:drawable/ic_dialog_email" />

            <ImageButton
                android:id="@+id/btnSave"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/save"
                android:src="@android:drawable/ic_menu_save" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Панель настроек (появляется при выборе некоторых инструментов) -->
    <LinearLayout
        android:id="@+id/settingsPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Настройки кисти -->
        <LinearLayout
            android:id="@+id/brushSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brush_size"
                android:layout_gravity="center_vertical"/>

            <SeekBar
                android:id="@+id/seekBarBrushSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="50"
                android:progress="5" />

            <Button
                android:id="@+id/btnColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color" />
        </LinearLayout>

        <!-- Настройки фигур -->
        <LinearLayout
            android:id="@+id/shapeSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btnRectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rectangle" />

            <Button
                android:id="@+id/btnCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/circle" />

            <Button
                android:id="@+id/btnShapeColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color" />
        </LinearLayout>

        <!-- Настройки текста -->
        <LinearLayout
            android:id="@+id/textSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/editTextInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBoxBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bold" />

                <CheckBox
                    android:id="@+id/checkBoxItalic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/italic" />

                <Spinner
                    android:id="@+id/spinnerFont"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
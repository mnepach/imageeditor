<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?attr/colorPrimary">

    <ImageButton
        android:id="@+id/btnUndo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_undo"
        android:contentDescription="@string/undo"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/btnRedo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_redo"
        android:contentDescription="@string/redo"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/btnCrop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_crop"
        android:contentDescription="@string/crop"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/btnRotate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_rotate"
        android:contentDescription="@string/rotate"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/btnFlip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_flip"
        android:contentDescription="@string/flip"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/btnDraw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_draw"
        android:contentDescription="@string/draw"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/btnShape"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_shape"
        android:contentDescription="@string/shape"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/btnText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_text"
        android:contentDescription="@string/text"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_save"
        android:contentDescription="@string/save"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp" />
</LinearLayout>